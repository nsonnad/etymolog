html, body
  height 100%
  overflow hidden

div.container
  width 100%
  div.intro
    width 100%
    height 50px
    position absolute
    top 0
    left 0
    background-color white
    text-align center
    margin 0 auto
    padding 0
    h1
      height 50%
      padding 0
      margin auto auto auto 10px
      position absolute
      top 0
      bottom 0
      left 0
      display inline-block
      text-transform uppercase
    div.menu
      position absolute
      height 50%
      overflow auto
      margin auto 10px auto auto
      top 0
      bottom 0
      right 0
      display inline-block
      margin 0 auto

  div.content
    width 100%
    margin 0 auto
    div#graph
      margin 0
